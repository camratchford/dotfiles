[init]
  defaultBranch = main

[user]
  name = Cam Ratchford
  email = camratchford@gmail.com

[core]
  filemode = false
  editor = vi

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[diff]
  tool = vimdiff

[merge]
  log = true
  tool = vimdiff

[push]
  default = simple

[credential]
	helper = store

[pull]
  rebase = false

[includeIf "gitdir:~/work/**"]
  path = ~/dotfiles/.gitconfig.work

[fetch]
	auto = 1
