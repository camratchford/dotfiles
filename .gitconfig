[init]
  defaultBranch = main

[includeIf "gitdir:~/work/**"]
  path = ~/dotfiles/.gitconfig.work

[includeIf "gitdir:~/**"]
  path = ~/dotfiles/.gitconfig.personal

[core]
  filemode = false
  editor = vi

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[diff]
  tool = vimdiff

[merge]
  log = true
  tool = vimdiff

[push]
  default = simple

[credential]
	helper = store
[pull]
	rebase = false
