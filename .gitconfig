[init]
  defaultBranch = main

[user]
  name = Cam Ratchford
  email = camratchford@gmail.com

[core]
  filemode = false
  editor = vi
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  syntax-theme = TwoDark
  navigate = true
  light = false
  side-by-side = true
  file-style = yellow bold
  line-numbers-left-style = "#a0a0a0"
  line-numbers-right-style = "#a0a0a0"
[color]
  ui = auto
  status = auto
  branch = auto
  interactive = auto

[diff]
  tool = vimdiff

[merge]
  log = true
  tool = vimdiff

[push]
  default = simple

[credential]
	helper = store

[pull]
  rebase = false

[includeIf "gitdir:~/work/**"]
  path = ~/dotfiles/.gitconfig.work

[fetch]
	auto = 1
